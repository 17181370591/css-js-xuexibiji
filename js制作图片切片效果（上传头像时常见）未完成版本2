js代码=================================================================


$(function () {
    var drag1 = false;
    var dd = -1;
    var t1 = $('.a5 img').eq(0).width() / $('.a2').eq(0).width();
    var t2 = $('.a5 img').eq(0).height() / $('.a2').eq(0).height();
    $('.a5 img').css('clip', 'rect(0,100px,100px,0)')
        .css('transform-origin', '0 0')
        .css('transform', 'scale(4,3)');
    $('.a2').draggable({
        handle: '.hand',
        containment: '.a3', stop: f_size
    })

    function f_size() {
        t1 = $('.a5 img').eq(0).width() / $('.a2').eq(0).width();
        t2 = $('.a5 img').eq(0).height() / $('.a2').eq(0).height();
        var y1 = $('.a2').eq(0).position().top;
        var y2 = $('.a2').eq(0).position().top + $('.a2').eq(0).height();
        var x1 = $('.a2').eq(0).position().left;
        var x2 = $('.a2').eq(0).position().left + $('.a2').eq(0).width();
        $('.a5 img').css('clip', 'rect(' + y1 + 'px,' + x2 + 'px,' + y2 + 'px,' + x1 + 'px)')
            .css('transform', 'scale(' + t1 + ',' + t2 + ')')
            .css('left', -x1 * t1).css('top', -y1 * t2)
    }

    function go_right(e) {
        w = e.pageX - $('.a2').offset().left - $('.a2').width() - 2;
        $('.a2').css('width', '+=' + w);
    }

    function go_left(e) {
         w = e.pageX - $('.a2').offset().left - 2;
         $('.a2').css('left', '+=' + w).css('width', '-=' + w);
        // $('.a2').css('right', rr).css('width', '-=' + w);

    }

    function go_up(e) {
        h = e.pageY - $('.a2').offset().top - 2;
        $('.a2').css('top', '+=' + h).css('height', '-=' + h);
    }

    function go_down(e) {
        h = e.pageY - $('.a2').offset().top - $('.a2').height() - 2;
        $('.a2').css('height', '+=' + h);
    }

    var d1 = $('.a4');
    d1.mousedown(function (e) {
        drag1 = true;
        dd = $('.a4').index(e.target);
    });
    $(document).mouseup(function () {
        drag1 = false
    });
    $('.a1').mousemove(function (e) {
        if (drag1) {
            var w = 0;
            var h = 0;
            funs = new Array(
                Array(go_up, go_left),
                Array(go_up),
                Array(go_up, go_right),
                Array(go_left),
                Array(go_right),
                Array(go_down, go_left),
                Array(go_down),
                Array(go_down,go_right)
            );
            for (i = 0; i < funs[dd].length; i++) {
                funs[dd][i](e);
            }
//             if (dd == 4) {
//                 go_right(e);
//             }
//             else if (dd == 3) {
//                 go_left(e);
//             }
//             else if (dd == 1) {
// go_up(e);
//             }
//             else if (dd == 6) {
//                 go_down(e)
//
//             }
//             else if (dd == 2) {
//              go_up(e);go_right(e);
//             }
//             else if (dd == 0) {
//                 go_up(e);go_left(e);
//             }
//             else if (dd == 5) {
//         go_down(e);go_left(e);
//             }
//             else if (dd == 7) {
//    go_down(e);
//                 go_right(e);
//             }
            f_size();
        }
    })
    $('.a5').draggable();
})

css代码=================================================================


.a1{width:400px;height:300px;margin:50px auto;position:relative;border:1px solid #f00;overflow: hidden}
.a2{position: absolute;width:100px;height:100px;box-shadow:0 0 0 400px rgba(0,0,0,0.6);
    border:2px solid #fff;cursor:move;min-height: 50px;min-width: 50px;}
.a3{position: absolute;width:400px;height:300px;z-index:-3;}
.a4{position: absolute;width:8px;height:8px;margin:-4px 0 0 -4px;background: #fff;}
.a5{width:400px;height:300px;border:1px solid #f00;position: absolute;top:50px;left:1200px;}
.a5 img{width:400px;height:300px;position: absolute;}
.a2 .hand{background:transparent;width:100%;height:100%;}
.l100{left:100%}
.l50{left:50%;cursor:n-resize}
.t50{top:50%;cursor:e-resize}
.t100{top:100%}
.cur1{cursor:nw-resize}
.cur2{cursor:ne-resize}
