 <div class="a1">
    <div class="a2">
        <div class="a4 cur1" ></div>
        <div class="a4 t50"></div>
        <div class="a4 t50 l100"></div>
        <div class="a4 t100 l50"></div>
        <div class="a4 t100  cur2"></div>
        <div class="a4 l50" ></div>
        <div class="a4 t100 l100 cur1"></div>
        <div class="a4 l100 cur2"></div>
